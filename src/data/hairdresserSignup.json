{
  "sections": [
    {
      "widget": "RadioWidget",
      "name": "hairdresser.type",
      "column": 12,
      "required": true,
      "value": "Coiffeur indépendante",
      "options": [
        {
          "label": "Coiffeur indépendante",
          "value": "Coiffeur indépendante"
        },
        {
          "label": "Salon",
          "value": "Salon"
        }
      ]
    },
    {
      "widget": "InputWidget",
      "name": "hairdresser.name",
      "placeholder": "Nom",
      "required": true,
      "column": 6,
      "$if": {
        "$eq": ["_KEY_:hairdresser.type", "Coiffeur indépendante"],
        "defaultValue": "Coiffeur indépendante"
      }
    },
    {
      "widget": "InputWidget",
      "placeholder": "Prenom",
      "name": "hairdresser.lastname",
      "required": true,
      "column": 6,
      "$if": {
        "$eq": ["_KEY_:hairdresser.type", "Coiffeur indépendante"],
        "defaultValue": "Coiffeur indépendante"
      }
    },
    {
      "widget": "InputWidget",
      "placeholder": "Nom du salon",
      "name": "hairdresser.salonName",
      "required": true,
      "column": 12,
      "$if": {
        "$eq": ["_KEY_:hairdresser.type", "Salon"],
        "defaultValue": "Coiffeur indépendante"
      }
    },
    {
      "widget": "InputWidget",
      "placeholder": "Email",
      "name": "hairdresser.email",
      "required": true,
      "column": 6,
      "schema": {
        "pattern": "^((\"[\\w-\\s]+\")|([\\w-]+(?:\\.[\\w-]+)*)|(\"[\\w-\\s]+\")([\\w-]+(?:\\.[\\w-]+)*))(@((?:[\\w-]+\\.)*\\w[\\w-]{0,66})\\.([a-z]{2,6}(?:\\.[a-z]{2})?)$)|(@\\[?((25[0-5]\\.|2[0-4][0-9]\\.|1[0-9]{2}\\.|[0-9]{1,2}\\.))((25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\\.){2}(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\\]?$)",
        "maxLength": 100,
        "errorMessage": {
          "pattern": "Email address format not valid yet",
          "required": "Required",
          "maxLength": "Too long"
        }
      }
    },
    {
      "widget": "PhoneWidget",
      "placeholder": "Numero de telephone",
      "name": "hairdresser.phone",
      "required": true,
      "column": 6
    },
    {
      "widget": "InputWidget",
      "placeholder": "Mot de passe",
      "name": "hairdresser.password",
      "type": "password",
      "required": true,
      "column": 6,
      "schema": {
        "minLength": 8,
        "maxLength": 16,
        "pattern": "(?=^.{8,16}$)(?=.*?[a-z])(?=.*?[A-Z])(?=.*?\\d)(?=.*?\\W)",
        "errorMessage": {
          "pattern": "Password must be 8-16 characters, with at least 1 digit, 1 lowercase, 1 uppercase letter, and a special character (@#$%&*!)",
          "minLength": "The password is less than minimum length of 6",
          "maxLength": "The password exceeds maximum length of 18."
        }
      }
    },
    {
      "widget": "InputWidget",
      "placeholder": "Confirmer le mot de passe",
      "name": "hairdresser.confrimPassword",
      "type": "password",
      "required": true,
      "column": 6,
      "schema": {
        "minLength": 8,
        "maxLength": 16,
        "pattern": "(?=^.{8,16}$)(?=.*?[a-z])(?=.*?[A-Z])(?=.*?\\d)(?=.*?\\W)",
        "errorMessage": {
          "pattern": "Password must be 8-16 characters, with at least 1 digit, 1 lowercase, 1 uppercase letter, and a special character (@#$%&*!)",
          "minLength": "The password is less than minimum length of 6",
          "maxLength": "The password exceeds maximum length of 18."
        }
      }
    },
    {
      "widget": "ButtonWidget",
      "children": "Envoyer",
      "type": "submit",
      "disabled": true,
      "column": 12
    }
  ]
}
